<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:id="@+id/business_image_view_list"
            android:src="@drawable/ic_baseline_mail_24"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">
            <TextView
                android:padding="4dp"
                android:id="@+id/business_name_tv_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BusinessName"/>
            <TextView
                android:padding="4dp"
                android:id="@+id/business_location_tv_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Location"/>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:cardCornerRadius="16dp">
        <Button
            android:textSize="12sp"
            android:id="@+id/book_treatment_btn"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book treatment"

            android:backgroundTint="#1273DC"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>